{
  "jcr:primaryType": "oak:QueryIndexDefinition",
  "compatVersion": 2,
  "type": "lucene",
  "async": "async",

  "indexRules" : {
    "jcr:primaryType": "nt:unstructured",

    "pant:module": {

      "properties": {
        "jcr:primaryType": "nt:unstructured",

        "allProps": {
          "name": ".*",
          "isRegexp": true,
          "nodeScopeIndex": true
        }
      }
    }
  }
}